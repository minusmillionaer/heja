{
  "name": "netzfabrik/sepa",
  "type": "library",
  "description": "php lib to create sepa xml file",
  "keywords": [
    "GiulianoSchindler",
    "Netzfabrik",
    "Php",
    "Heja",
    "Xml"
  ],
  "homepage": "https://github.com/minusmillionaer/netzfabrik-sepa",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "Giuliano Schindler",
      "email": "giuliano.schindler@netzfabrik.com",
      "homepage": "https://netzfabrik.com",
      "role": "Developer"
    }
  ],
  "require": {
    "illuminate/support": "~5.1",
    "php" : "~7.0"
  },
  "require-dev": {
    "phpunit/phpunit" : ">=5.4.3",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "NETZFABRIK\\Payments\\Sepa\\": "src"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
